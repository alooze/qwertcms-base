{
    "name": "alooze/qwertcms-base",
    "type": "library",
    "description": "Laravel5 based CMS skeleton",
    "keywords": [
        "alooze",
        "qwertcms-base"
    ],
    "homepage": "https://github.com/alooze/qwertcms-base",
    "license": "MIT",
    "authors": [
        {
            "name": "alooze",
            "email": "a.looze@gmail.com",
            "homepage": "http://alooze.com.ua",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "jeroennoten/laravel-adminlte": "^1.15",
        "laravel/framework": "5.4.*",
        "laravelcollective/html": "^5.3.0",
        "mcamara/laravel-localization": "1.0.*",
        "unisharp/laravel-filemanager": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "alooze\\QwertCms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "alooze\\QwertCms\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
